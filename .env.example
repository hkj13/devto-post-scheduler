# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ===========================================
# AutoContent Studio - Multi-Platform Config
# ===========================================

# ===========================================
# PLATFORM CONFIGURATION
# Enable/disable each platform as needed
# ===========================================

# Dev.to (Enabled by default)
DEVTO_ENABLED=true
DEVTO_API_KEY=your_devto_api_key_here

# Medium (Optional)
MEDIUM_ENABLED=false
MEDIUM_API_KEY=your_medium_api_key_here

# Twitter/X (Optional)
TWITTER_ENABLED=false
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_POST_TYPE=single  # Options: 'single' or 'thread'

# ===========================================
# CONTENT & SCHEDULING
# ===========================================

# Scheduling (cron expression) - Default: 9 AM UTC daily
POST_SCHEDULE=0 9 * * *

# Content Topics (comma-separated)
CONTENT_TOPICS=AgenticAI,GenerativeAI,LLM,CloudAI,DataScience,ML,MLOps,DeepLearning,NLP,RAG,ComputerVision

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Logging level
LOG_LEVEL=info

# Post immediately on startup (for testing)
POST_ON_STARTUP=false
