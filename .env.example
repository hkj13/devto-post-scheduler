# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Dev.to Configuration
DEVTO_API_KEY=your-devto-api-key

# Posting Schedule (cron format: minute hour day month weekday)
# Default: Every day at 9:00 AM UTC
POST_SCHEDULE=0 9 * * *

# Content Topics (comma-separated)
CONTENT_TOPICS=AgenticAI,GenerativeAI,LLM,CloudAI,DataScience,ML,MLOps,DeepLearning,NLP,RAG,ComputerVision

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agent.log

# Optional: Post immediately on startup (for testing)
POST_ON_STARTUP=false
